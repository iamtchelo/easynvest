#page-users

  .users-list
    list-style: none
    padding: 0
    margin: 0

    &::after
      content: ""
      display: block
      clear: both

  .user-item
    position: relative
    float: left
    padding: 15px 10px
    width: 100%
    border-bottom: 1px solid $normal-gray
    box-sizing(border-box)

    &:last-child
      border: none

    &:hover
      background: $normal-gray

    .user-info
      float: left
      margin: 3px 0 0 0
      font-size: 14px

    .actions
      float: right

      .button
        margin-top: -5px


@media only screen and (max-width: 500px)

  #page-users .user-item
    &:hover
      background: transparent

    .actions
      width: 100%
      margin: 20px 0 0 0

      .button
        padding: 10px 0
        width: 100%
